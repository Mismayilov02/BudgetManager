<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BudgetManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/gray_light</item>
        <item name="android:statusBarColor">@color/white_off</item>
    </style>

    <style name="text_input_style" parent="Theme.BudgetManager">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/hint_gray</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:maxLength">20</item>
        <item name="maxLines">1</item>
    </style>

    <style name="custom_button_style" parent="Theme.BudgetManager">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/custom_button_backround</item>
    </style>

</resources>